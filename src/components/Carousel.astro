---
const {
  cards,
}: {
  cards: {
    img: string;
    overskrift: string;
    beskrivelse: string;
    link: string;
  }[];
} = Astro.props;
import Card from "../components/card.astro";
---

<section class="carousel">
  <button id="prev">❮</button>
  <div class="carousel-container">
    {
      cards.map((card, index) => (
        <div class="carousel-slide">
          <Card
            img={card.img}
            overskrift={card.overskrift}
            beskrivelse={card.beskrivelse}
            link={card.link}
          />
        </div>
      ))
    }
  </div>
  <button id="next">❯</button>
</section>

<script>
  if (typeof window !== "undefined") {
    let currentIndex = 0;
    const slides = Array.from(document.querySelectorAll(".carousel-slide"));
    const container = document.querySelector(".carousel-container");

    function updateCarousel() {
      const visibleCards = window.innerWidth >= 1024 ? 4 : 1; // 4 på desktop, 1 på mobile
      const container = document.querySelector(
        ".carousel-container"
      ) as HTMLElement;

      if (container) {
        container.style.transform = `translateX(-${currentIndex * (100 / visibleCards)}%)`;
      }
    }

    document.querySelector("#prev")?.addEventListener("click", () => {
      const visibleCards = window.innerWidth >= 1024 ? 4 : 1;
      currentIndex = Math.max(currentIndex - visibleCards, 0);
      updateCarousel();
    });

    document.querySelector("#next")?.addEventListener("click", () => {
      const visibleCards = window.innerWidth >= 1024 ? 4 : 1;
      currentIndex = Math.min(
        currentIndex + visibleCards,
        slides.length - visibleCards
      );
      updateCarousel();
    });

    window.addEventListener("resize", updateCarousel);
    updateCarousel();
  }
</script>

<style>
  .carousel {
    padding-top: 2rem;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 1200px;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-container {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
  }

  .carousel-slide {
    flex: 0 0 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #prev,
  #next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    z-index: 10;
    color: black;
  }

  #prev {
    left: 3rem;
  }

  #next {
    right: 3rem;
  }
  @media (min-width: 1024px) {
    .carousel {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }
    .carousel-slide {
      flex: 0 0 25%;
    }
    #prev {
      left: 1rem;
    }

    #next {
      right: 1rem;
    }
  }
</style>

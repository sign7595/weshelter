---
const { img, overskrift, beskrivelse } = Astro.props;
---

<div class="card">
  <img src={img} alt={overskrift} />
  <h3>{overskrift}</h3>
  <h4>{beskrivelse}</h4>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 300px;
    margin: auto;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  h3 {
    margin-top: 10px;
    font-size: 1.5rem;
  }

  h4 {
    font-size: 1rem;
    font-weight: 300;
  }
</style>

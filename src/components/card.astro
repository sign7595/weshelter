<div class="card">
  {
    link && (
      <a href={link} class="card-link">
        <img src={img} alt={overskrift} />
        <h3>{overskrift}</h3>
        <h4>{beskrivelse}</h4>
      </a>
    )
  }
  {
    !link && (
      <>
        <img src={img} alt={overskrift} />
        <h3>{overskrift}</h3>
        <h4>{beskrivelse}</h4>
      </>
    )
  }
</div>
<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 300px;
    margin: auto;
    cursor: pointer;
    height: 100%;
  }

  .card img {
    width: auto%;
    height: 150px;
    object-fit: cover;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  h3 {
    margin-top: 10px;
    font-size: 1.5rem;
    position: relative;
    display: inline-block;
    font-weight: 700;
    padding-top: 2rem;
  }

  h4 {
    font-size: 1rem;
    font-weight: 400;
    padding-inline: 1rem;
    line-height: 1.5rem;
  }

  h3::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background-color: black;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease-in-out;
  }

  h3:hover::after {
    transform: scaleX(1);
  }

  .card:hover h3::after {
    transform: scaleX(1);
  }

  .card-link {
    text-decoration-line: none;
    color: black;
  }

  @media (min-width: 1024px) {
    h3 {
      font-size: 1.2rem;
    }
  }
</style>

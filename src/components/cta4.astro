---
const { button, link } = Astro.props;
---

<article>
  <a href={link}>{button}</a>
</article>

<style>
  a {
    border: 2px solid black;
    background-color: white;
    color: black;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    padding: 5px 10px;
    text-align: center;
    margin-right: 0;
    display: inline-block;
    transition:
      transform 0.1s ease-in-out,
      background-color 0.1s ease,
      color 0.1s ease;
  }

  @media (min-width: 768px) {
    a {
      border: 2px solid #0071f1;
      border-top-left-radius: 25px;
      border-top-right-radius: 25px;
      background-color: #0071f1;
      color: rgb(255, 255, 255);
      text-decoration: none;
      font-size: 18px;
      font-weight: 600;
      padding: 3vw 8vw;
      text-align: center;
      margin-right: 1%;
      margin-bottom: 1%;
    }
  }
</style>

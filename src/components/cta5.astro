---
const { button, link, id, klasse } = Astro.props;
---

<article>
  <a id={id} class={klasse} href={link}>{button}</a>
</article>

<style>
  a {
    /* border: 2px solid black; */
    color: black;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    padding: 5px 10px;
    text-align: center;
    margin-right: 0;
    display: inline-block;
    transition:
      transform 0.1s ease-in-out,
      background-color 0.1s ease,
      color 0.1s ease;
  }

  @media (min-width: 768px) {
    a {
      text-decoration: none;
      font-size: 18px;
      font-weight: 600;
      text-align: center;
      margin-right: 0;
      display: inline-block;
      transition:
        transform 0.1s ease-in-out,
        background-color 0.1s ease,
        color 0.1s ease;
      border: 3px solid #0076f1;
      border-top-left-radius: 25px;
      border-top-right-radius: 25px;

      color: rgb(0, 0, 0);
      text-decoration: none;
      font-size: 18px;
      font-weight: 600;
      padding-top: 1.5vw;
      padding-bottom: 3vw;
      padding-left: 7vw;
      padding-right: 7vw;
      text-align: center;
      margin-right: 1%;
      margin-bottom: 1%;
      cursor: pointer;
      white-space: nowrap;
    }
    .white {
      background-color: white;
      color: black;
    }
    .blue {
      background-color: #0076f1;
      color: white;
    }
  }
</style>
